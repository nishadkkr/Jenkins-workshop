pipeline {
    agent any
    stages {
        stage("Code Checkout from Git") {
            steps { 
                checkout([$class: 'GitSCM', extensions: [], userRemoteConfigs: [[url: 'https://github.com/p-nishad/Jenkins-workshop']]])
            }
        }
        stage("Code Analysis") {
            steps {
                echo("Sonar")
            }
        }
        stage("Security Scan") {
            steps {
                echo("scan")
            }
        }
        stage("Build") {
            steps {
                echo("Build")
            }
        }
        stage("Deploy") {
            steps {
                echo("deploy")
            }
        }
        stage("Send Notification") {
            steps {
                echo("slack")
            }
        }
    }
}